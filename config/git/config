# vim: set filetype=gitconfig :
#
[advice]
	implicitIdentity = false
[alias]
	commitv   = commit -v
	fixup     = !sh -c 'git commit --fixup=$(git fzf "$1")' "$1"
	fzf       = !git log --oneline "${1:-master}.." | fzf | awk '{print $1}'
	hub       = repo hub
	lg        = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	log1      = log --oneline
	log1d     = log --oneline develop..
	log1m     = log --oneline master..
	log1r     = log --oneline --reverse
	log1rd    = log --oneline --reverse develop..
	log1rm    = log --oneline --reverse master..
	logrm     = log --reverse master..
	mergenoff = merge --no-ff
	mt        = !mergetool
	pr        = "!f() { git fetch origin pull/$1/head:pr$1; }; f"
	redo      = commit --amend -C HEAD
	squash    = !sh -c 'git commit --squash=$(git fzf "$1")' "$1"
[branch]
	autosetuprebase = always
[color]
	ui = true
[color "diff"]
	#meta = 227
	#frag = magenta bold
	#commit = 227 bold
	#old = red bold
	#new = green bold
	whitespace = red reverse
[color "diff-highlight"]
	#oldNormal = red bold
	#oldHighlight = red bold 52
	#newNormal = green bold
	#newHighlight = green bold 22
[color "status"]
	untracked = red
	added = green
	changed = yellow
[commit]
	verbose = true
[diff]
	renameLimit = 75
	algorithm = histogram
	renames = copies
[difftool]
	prompt = no
[filter "lfs"]
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
	required = true
	smudge = git-lfs smudge -- %f
[help]
	autocorrect = 1
[interactive]
	diffFilter = diff-highlight
[log]
	date = auto:human
[merge]
	log = true
	tool = meld
[mergetool]
	keepBackup = false
	prompt = no
[pager]
	diff = diff-so-fancy | less
	show = diff-so-fancy | less
[push]
	default = current
[rebase]
	autoSquash = true
	stat = true
[submodule]
	fetchJobs = 8
[url "ssh://git@github.com/mistifyio"]
	insteadOf = https://github.com/mistifyio
[url "ssh://git@github.com/mmlb"]
	insteadOf = https://github.com/mmlb
[url "ssh://git@github.com/packethost"]
	insteadOf = https://github.com/packethost
[user]
	email = mmendez534@gmail.com
	name = Manuel Mendez
	useConfigOnly = true
