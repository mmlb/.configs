[advice]
	implicitIdentity = false
[alias]
	graph = log --oneline --graph
	log1 = log --oneline
	mergenoff = merge --no-ff
	ngrep = grep -n
	noffmerge = merge --no-ff
	publish = !sh -c ' \
		remote=$([ $0 != "sh" ] && echo $0 || echo origin) && \
		branch=$(git symbolic-ref HEAD| sed \"s|refs/heads/||\") && \
		git push "$remote" "$branch":"$branch" && \
		git branch -u "$remote/$branch" "$branch"'
	vcommit = commit -v
	commitv = commit -v
[branch]
	autosetuprebase = always
[color]
	ui = true
[diff]
	renamelimit = 0
[difftool]
	prompt = no
[merge]
	tool = meld
	log = true
[mergetool]
	keepBackup = false
	prompt = no
[push]
	default = current
[user]
	name = Manuel Mendez
	email = mmendez@srtrl.com
[help]
	autocorrect = 1
[core]
	preloadindex = true
